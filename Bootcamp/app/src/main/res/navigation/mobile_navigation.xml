<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bootcamp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_busqueda"
        android:name="com.example.bootcamp.ui.dashboard.DashboardFragment"
        android:label="@string/title_busqueda"
        tools:layout="@layout/fragment_play" />

    <fragment
        android:id="@+id/navigation_play"
        android:name="com.example.bootcamp.ui.notifications.NotificationsFragment"
        android:label="@string/title_play"
        tools:layout="@layout/fragment_busqueda" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.bootcamp.ui.notifications.NotificationsFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_play" />
</navigation>